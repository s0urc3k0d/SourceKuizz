{
  "name": "@sourcekuizz/backend",
  "version": "0.1.0",
  "type": "commonjs",
  "main": "dist/main.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/main.js",
    "test": "vitest run",
    "test:e2e": "jest --testMatch '**/test/e2e/**/*.jest-spec.ts'",
    "test:ci": "pnpm run test && pnpm run test:e2e",
    "test:watch": "vitest",
    "prisma:generate": "prisma generate",
  "prisma:push": "prisma db push",
  "seed": "ts-node scripts/seed.ts",
  "test:metrics": "jest --testPathPattern=metrics.jest-spec.ts",
  "gen:session-code": "node -e \"console.log(require('crypto').randomBytes(3).toString('hex').toUpperCase())\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
  "@prisma/client": "^5.22.0",
    "argon2": "^0.40.3",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5",
    "uuid": "^13.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@nestjs/testing": "^10.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "@types/socket.io": "^3.0.2",
    "@types/socket.io-client": "^3.0.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^11.0.0",
    "jest": "^29.7.0",
  "prisma": "^5.22.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.0",
    "vitest": "^1.5.0"
  }
}
