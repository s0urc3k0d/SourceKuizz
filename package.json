{
  "name": "sourcekuizz-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "dev:backend": "pnpm --filter @sourcekuizz/backend run dev",
    "dev:web": "pnpm --filter @sourcekuizz/web run dev",
    "dev:shared": "pnpm --filter @sourcekuizz/shared run dev",
    "dev:stack": "concurrently -k -n shared,backend,web -c yellow,blue,green \"pnpm -w run dev:shared\" \"pnpm -w run dev:backend\" \"pnpm -w run dev:web\"",
    "start:backend": "pnpm --filter @sourcekuizz/backend run start",
    "start:web": "pnpm --filter @sourcekuizz/web run start",
    "start:stack": "concurrently -n backend,web \"pnpm -w run start:backend\" \"pnpm -w run start:web\"",
    "lint": "eslint . --ext .ts,.tsx || true",
    "test": "pnpm -r run test"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@types/web-push": "^3.6.4",
    "web-push": "^3.6.7"
  }
}
