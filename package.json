{
  "name": "sourcekuizz",
  "version": "1.0.0",
  "description": "Plateforme de Quizz interactive avec connexion Twitch et système temps réel",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server/index.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts client/src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.ts client/src/**/*.{ts,tsx} --fix",
    "docker:build": "docker build -t sourcekuizz .",
    "docker:run": "docker run -p 3000:3000 -p 3001:3001 sourcekuizz",
    "setup": "npm install && cd client && npm install"
  },
  "keywords": [
    "quiz",
    "twitch",
    "real-time",
    "websocket",
    "interactive",
    "gaming"
  ],
  "author": "SourceKuizz Team",
  "license": "GPL-3.0",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "sqlite3": "^5.1.6",
    "knex": "^2.5.1",
    "passport": "^0.6.0",
    "passport-twitch": "^1.0.3",
    "passport-jwt": "^4.0.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "dotenv": "^16.3.1",
    "winston": "^3.10.0",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@types/node": "^20.4.5",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.9",
    "@types/cors": "^2.8.13",
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "eslint": "^8.45.0",
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}